<h2>
  <%= flash[:notice] %>
</h2>
<% if @user %>
  <h1>Welcome to MakersBnB, <%= @user.username %> </h1>
<% else %>
  <h1>Tortoise Tourism</h1>
  <form action='/users/new' method='get'>
    <input type='submit' value='Sign Up'>
  </form>
  <form action='/sessions/new' method='get'>
    <input type='submit' value='Sign in'>
  </form>
<% end %>

<h1>Spaces:</h1>
<% unless @spaces.nil? %>
<article class="container">
<% @spaces.each do |space| %>
  <div class="card">
    <p><%= space.name %></p> 
    <p><%= space.description %></p> 
    <p>Â£<%= space.price %> per night</p>
    <form action="/spaces/<%= space.id %>">
      <input type='submit' value='More Details'>
    </form>
  </div>
<% end %>
</article>
<% end %>
